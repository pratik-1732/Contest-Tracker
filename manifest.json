{
  "manifest_version": 3,
  "name": "CF-Reminder",
  "version": "1.0.0",
  "author": "Pratik",
  "language": "en",
  "description": "Stay updated about upcoming CF contests and rating changes!",
  "icons": {
    "16": "images/cf_reminder_16.png",
    "48": "images/cf_reminder_48.png",
    "128": "images/cf_reminder_128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/cf_reminder_16.png",
      "48": "images/cf_reminder_48.png",
      "128": "images/cf_reminder_128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "notifications",
    "webRequest",
    "tabs",
    "scripting",
    "activeTab",
    "alarms"
  ],
  "host_permissions": ["https://codeforces.com/*"]
}
